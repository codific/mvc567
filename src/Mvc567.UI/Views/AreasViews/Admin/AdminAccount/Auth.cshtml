@{ 
    Layout = null;
}
<html>
    <head>
        <meta charset="utf-8">
        <meta name="robots" content="noindex,nofollow" />
        <title>Mvc567</title>
        <link rel="icon" type="image/x-icon" href="/resources/images/icon32_ico.ico">
        <link rel="icon" type="image/png" href="/resources/images/icon32_png.png">
        <link rel="apple-touch-icon" href="/resources/images/icon200_png.png">
    </head>
    <body>
        <form id="auth-form" name="AuthForm" method="post" asp-controller="AdminAccount" asp-action="Auth">
            <input id="auth-code-input" type="hidden" name="AuthCode"/>
        </form>
        <script type="text/javascript">
            (function () {
                let authCode = prompt("Authentication code:", "");
                if (authCode != null && authCode != "") {
                    let authCodeInput = document.getElementById("auth-code-input");
                    authCodeInput.value = authCode;
                    document.forms["AuthForm"].submit();
                }
                else {
                    window.location.replace("/");
                }
            })();
        </script>
    </body>
</html>
