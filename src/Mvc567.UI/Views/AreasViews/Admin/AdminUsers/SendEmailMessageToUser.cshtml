@model AdminSendEmailMessageToUserViewModel

<div class="col-12 col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mb-1">Send Email</h4>
            <p class="text-small font-weight-bold">to @Model.FirstName @Model.LastName (@Model.Email)</p>
            <form asp-area="Admin" asp-controller="AdminUsers" asp-action="SendEmailMessageToUser">
                <div class="form-group">
                    <label>Message:</label>
                    <textarea class="form-control" placeholder="Message" asp-for="Message"></textarea>
                    <span class="text-danger text-small" asp-validation-for="Message"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger text-small"></div>
                <hr />
                <div class="form-group mb-0">
                    <button type="submit" class="d-flex btn btn-primary mt-2 ml-auto mr-0">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>
