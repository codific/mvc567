<!DOCTYPE html>
<html>
<head>
    @await Html.PartialAsync("_AdminSharedHead")
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
                <div class="row w-100 m-0">
                    <div class="mx-auto">
                        <div class="d-flex brand-form-container">
                            <a target="_blank" href="https://Mvc567.com/">
                                <img class="brand-logo-form" src="/resources/images/logo_svg.svg" />
                                <p class="brand-text-form"><strong>mvc</strong><span class="text-red">567</span></p>
                            </a>
                        </div>
                        <div class="auto-form-wrapper">
                            @{
                                if (TempData["SuccessStatusMessage"] != null)
                                {
                                    <div class="alert alert-success" role="alert">@Html.Raw(@TempData["SuccessStatusMessage"])</div>
                                }
                                else if (TempData["ErrorStatusMessage"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">@Html.Raw(@TempData["ErrorStatusMessage"])</div>
                                } 
                            }
                            @RenderBody()
                        </div>
                        <p class="footer-text text-center">Copyright Â© @DateTime.Now.Year <a class="text-red" href="https://www.codific.com/" target="_blank">Codific</a>. All rights reserved. </p>
                        <a class="footer-text text-left text-small" href="/"><span class="mdi mdi-arrow-left"></span> Go Back to Index</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_AdminSharedScripts")
</body>
</html>
