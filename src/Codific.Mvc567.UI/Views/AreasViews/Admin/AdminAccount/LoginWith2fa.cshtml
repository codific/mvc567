@model AdminLoginWith2faViewModel
@{
    Layout = "_AdminLoginLayout";
    ViewData["Title"] = "Admin Login with 2 Factor Authentication";
}
<form asp-area="Admin" asp-controller="AdminAccount" asp-action="LoginWith2fa" method="post">
    <form-text-input asp-for="TwoFactorCode" type="text" label="Authentication Code" placeholder="123456" />
    <form-visible-recaptcha />
    <div class="form-group">
        <button class="btn btn-primary submit-btn btn-block">Login</button>
    </div>
</form>
